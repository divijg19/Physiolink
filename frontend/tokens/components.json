{
    "button": {
        "variants": {
            "primary": {
                "background": "colors.primary",
                "textColor": "colors.textLight",
                "border": null
            },
            "secondary": {
                "background": "colors.secondary",
                "textColor": "colors.textLight",
                "border": null
            },
            "accent": {
                "background": "colors.accent",
                "textColor": "colors.textLight",
                "border": null
            },
            "ghost": {
                "background": "transparent",
                "textColor": "colors.primary",
                "border": "1px solid colors.primary"
            }
        },
        "sizes": {
            "sm": {
                "height": 40,
                "fontSize": "fontSizes.body",
                "padding": "spacing.sm"
            },
            "md": {
                "height": 48,
                "fontSize": "fontSizes.body",
                "padding": "spacing.md"
            }
        },
        "borderRadius": 12
    },
    "input": {
        "background": "colors.lightGray",
        "padding": "spacing.md",
        "borderRadius": 12,
        "fontSize": "fontSizes.body"
    },
    "avatar": {
        "fallbackBackground": "colors.lightGray",
        "sizes": {
            "small": 40,
            "medium": 56,
            "large": 96
        }
    },
    "card": {
        "background": "colors.lightGray",
        "padding": "spacing.md",
        "borderRadius": 12,
        "shadow": "shadow"
    }
}